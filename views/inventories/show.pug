extends ../layout

block content
  h2.text-center Inventory
  br
  .container
    .row
      .col
        .search
          .input-group
            .input-group-prepend
              .input-group-text SteamID64
            input#steamId.form-control(type="text" value=`${steamId ? steamId : ''}`)
          br
          p.text-center
            button.btn.btn-secondary(onclick='getInventory()') Submit
      script.
        function getInventory() {
            window.location.replace(`/inventory/${$('#steamId')[0].value}`)
        }
    if noUser
      h4.center User dosen't exist
    else if skins
      include ../_filters
      if settings.size == "l"
        include ../skins/_skin-large
      else
        include ../skins/_skin-small
    else 
      h4.center This user dosen't have any skins
