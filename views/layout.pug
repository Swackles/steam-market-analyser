doctype html
html
  head
    title= `${title} | Steam Market Analyser`
    
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.min.css')
    
    script(src='/javascripts/popper.min.js')
    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/chart.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/index.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js')
  body 
    nav.navbar.navbar-dark.bg-dark.navbar-expand-lg
      a.navbar-brand(href='/skins') Steam Market Analyser
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavDropdown' aria-controls='navbarNavDropdown' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
        
      .collapse.navbar-collapse#navbarNavDropdown
        ul.navbar-nav
          each navItems, navIndex in navbar
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href='#' id='navbarDropdown' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')= navIndex[0].toUpperCase() + navIndex.slice(1)
              .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
                each navItem in navItems
                  a.dropdown-item(href=`/items/${navItem.id}`)= navItem.name
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/skins/Unassaigned') Unassaigned
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/inventory') Inventory
    block content
